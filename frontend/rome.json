{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter":{
    "enabled": true,
    "lineWidth": 100
  },
  "javascript":{
    "formatter":{
      "quoteProperties": "asNeeded",
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingComma": "all"
    },
    "globals": []
  }
}